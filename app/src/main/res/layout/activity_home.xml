<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <ImageView
        android:id="@+id/ivEvents"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_above="@+id/ivMusic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/events" android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/ivSport"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignTop="@+id/ivEvents"
        android:layout_toEndOf="@+id/ivEvents"
        android:layout_toRightOf="@+id/ivEvents"
        android:scaleType="fitXY"
        android:src="@drawable/sport" />

    <ImageView
        android:id="@+id/ivMusic"
        android:layout_width="190dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:src="@drawable/music" />

    <ImageView
        android:id="@+id/ivMeetings"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivEvents"
        android:layout_toRightOf="@+id/ivEvents"
        android:scaleType="fitXY"
        android:src="@drawable/meetings" />


</RelativeLayout>