<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.arbi.evento.Login_Frame">

    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/imgGradient"
        android:src="@drawable/b_gradient"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:id="@+id/logo"
        />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logo"
        android:layout_alignRight="@+id/logo"
        android:layout_below="@+id/logo"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/century_bold"
        android:text="Username"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:id="@+id/etUsername"
        android:layout_alignLeft="@+id/tvUsername"
        android:layout_alignStart="@+id/tvUsername"
        android:layout_below="@+id/tvUsername"
        android:foreground="#FFF"
        android:layout_marginTop="5dp"
        android:imeOptions="actionNext"
        />

    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etUsername"
        android:layout_alignStart="@+id/etUsername"
        android:layout_below="@+id/etUsername"
        android:fontFamily="@font/century_bold"
        android:text="Password"
        android:textColor="#FFF"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignLeft="@+id/tvPassword"
        android:layout_alignStart="@+id/tvPassword"
        android:layout_below="@+id/tvPassword"
        android:foreground="#FFF"
        android:imeOptions="actionDone"
        
        />

</RelativeLayout>
